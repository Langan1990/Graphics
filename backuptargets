                    ctx.stroke();
                    }//end draw
                         }
                target.push(t4);
                
                t5 = { x: 660 , y: 20 , width: 150  , height: 10 
                      
                       , draw: function() {
                        ctx.fillStyle="rgb(255,255,255)";//colour
                    ctx.beginPath();
