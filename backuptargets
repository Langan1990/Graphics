                    ctx.stroke();
                    }//end draw
                         }
                target.push(t6);
        
                t7 = { x: 20 , y: 35 , width: 150  , height: 10 
                        , draw: function() {
                        ctx.fillStyle="rgb(255,255,255)";//colour
                    ctx.beginPath();
