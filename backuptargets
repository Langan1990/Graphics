                    ctx.fillStyle="rgb(0,0,0)";//colour
                    ctx.beginPath();
                    ctx.rect(this.x, this.y, this.width, this.height);
                    ctx.stroke();
                    }//end draw
                      
                     
                         }
                target.push(t2);
             
                
                t3 = { x: 340 , y: 20 , width: 150  , height: 10 
                      
                       , draw: function() {
                        ctx.fillStyle="rgb(255,255,255)";//colour
